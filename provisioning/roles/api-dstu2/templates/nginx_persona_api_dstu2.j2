upstream persona-api-dstu2 {
    server 127.0.0.1:{{persona_api_dstu2_server_internal_port}};
}

# the nginx server instance
server {
{% if persona_api_dstu2_server_host %}
    server_name {{persona_api_dstu2_server_host}};
{% endif %}

    listen {{persona_api_dstu2_server_port}};

    location {{persona_api_dstu2_server_context}} {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      access_log /var/log/nginx/persona_api_dstu2_access.log;
      proxy_pass http://persona-api-dstu2{{persona_api_dstu2_server_context}};
      proxy_redirect off;
    }

{% if persona_api_dstu2_server_secure_http %}
    ssl on;
    ssl_certificate /etc/nginx/ssl/persona-api-dstu2.crt;
    ssl_certificate_key /etc/nginx/ssl/persona-api-dstu2.key;
{% endif %}
}

{% if persona_api_dstu2_server_port != 80 and http_redirect %}
server {
    server_name {{persona_api_dstu2_server_host}};
    rewrite ^       {{persona_api_dstu2_server_base_url}}$request_uri? permanent;
    listen 80;
}
{% endif %}
