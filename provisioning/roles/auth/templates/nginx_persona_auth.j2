upstream persona-auth {
    server 127.0.0.1:{{persona_auth_server_internal_port}};
}

# the nginx server instance
server {
{% if persona_auth_server_host %}
    server_name {{persona_auth_server_host}};
{% endif %}

    listen {{persona_auth_server_port}};

    location {{persona_auth_server_context}} {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      access_log /var/log/nginx/persona_auth_access.log;
      proxy_pass http://persona-auth{{persona_auth_server_context}};
      proxy_redirect off;
    }

{% if persona_auth_server_secure_http %}
    ssl on;
    ssl_certificate /etc/nginx/ssl/persona-auth.crt;
    ssl_certificate_key /etc/nginx/ssl/persona-auth.key;
{% endif %}
}

